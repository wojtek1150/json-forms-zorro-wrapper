{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "json-forms": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "",
            "allowedCommonJsDependencies": ["lodash", "quill", "ajv", "ajv-formats"],
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "./node_modules/monaco-editor/min/vs",
                "output": "/assets/vs/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@ant-design/icons-angular/src/inline-svg/",
                "output": "/assets/"
              },
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": ["./node_modules/ng-zorro-antd/ng-zorro-antd.variable.min.css", "src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "outputPath": "docs",
              "baseHref": "/json-forms-zorro-wrapper/",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "json-forms:build:production"
            },
            "development": {
              "buildTarget": "json-forms:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "json-forms:build"
          }
        }
      }
    },
    "jsonforms-zorro-wrapper": {
      "projectType": "library",
      "root": "packages/jsonforms-zorro-wrapper",
      "sourceRoot": "packages/jsonforms-zorro-wrapper",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "packages/jsonforms-zorro-wrapper/tsconfig.lib.json",
            "project": "packages/jsonforms-zorro-wrapper/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/jsonforms-zorro-wrapper/tsconfig.lib.prod.json"
            }
          }
        }
      }
    }
  }
}
